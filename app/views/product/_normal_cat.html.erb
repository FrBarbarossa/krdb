<div class='col-1'><%= category.id %></div>
<div class='col-3'><%= category.name %></div>
<div class='col-3'>
    <div class="container">
        <div class="row">
            <div class='col-auto'>
                <%= form_with url: "/edcat/#{category.id}" do |form| %>
                    <%= form.submit(type: :image, src: asset_path('edit.png'), height: "20", id: 'btn') %>
                <% end %> 
            </div>
            <div class='col-auto'>
                <%= form_with url: "/delcat/#{category.id}" do |form| %>
                    <button type="submit" class="btn-close" aria-label="Закрыть"></button>
                <% end %>   
            </div>
        </div>
    </div>
</div>