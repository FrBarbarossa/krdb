<div class="row p-2">
    <div class="col-auto">
        <%= form_with class: "d-flex", url: "/addcat", method: :post do |form| %>
            <%= form.text_area :message, size: "15x1" %>
            <%= submit_tag("Добавить категорию", class: "btn btn-primary", id: 'btn') %>
          <% end %> 
    </div>
    </div>
</div>

<div class="row justify-content-md-center">
    <div class='col'>
        <div class='row justify-content-md-center'>
            <div class="col-1">id</div>
            <div class="col-3">Название категории</div>
            <div class='col-3'>Действие</div>
        </div>
        <% for category in @categories %>
            <div class='row justify-content-md-center' id=<%="cat-#{category.id}"%>>
                <%= render 'normal_cat', category: category%>
            </div>
        <% end %>

    </div>
</div>