<div class="row p-2">
    <div class="col-auto">
        <%= form_with class: "d-flex", url: "/addser", method: :post do |form| %>
            <%= form.text_area :message, size: "15x1" %>
            <%= submit_tag("Добавить серию", class: "btn btn-primary", id: 'btn') %>
          <% end %> 
    </div>
    </div>
</div>

