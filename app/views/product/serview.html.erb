        <div class='row justify-content-md-center'>
            <div class="col-1">id</div>
            <div class="col-3">Название типа</div>
            <div class='col-3'>Действие</div>
        </div>
        <% for series in @series %>
            <div class='row justify-content-md-center' id=<%="ser-#{series.id}"%>>
                <%= render 'normal_ser', series: series %>
            </div>
        <% end %>

    </div>
</div>